<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="130dp"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/a_dish_detail_show_img"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginLeft="8dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/i_nopic"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/a_dish_detail_user_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/a_dish_detail_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/a_dish_detail_user_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:text="小鱼儿"
            />

        <TextView
            android:id="@+id/a_dish_detail_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="1天前"
            />
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="18dp"
        android:gravity="center"
        >
        
        <ImageView
            android:id="@+id/a_dish_detail_zan"
            android:layout_width="27dp"
            android:layout_height="39dp"
            android:padding="5dp"
            />

        <TextView
            android:id="@+id/a_dish_detail_zan_numer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#333"
            android:textSize="14sp"
            />
        
    </LinearLayout>

</LinearLayout>